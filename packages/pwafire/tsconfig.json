{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": ["ES2015", "DOM"],
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/tests/*"]
}
