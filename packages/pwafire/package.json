{
  "name": "pwafire",
  "version": "5.1.4-rc.1",
  "description": "Progressive Web App API of APIs",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc -p tsconfig.browser.json",
    "build:js": "tsc",
    "build:bundle": "esbuild src/index.ts --bundle --minify --sourcemap --format=iife --global-name=YourLibrary --outfile=dist/index.min.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "test": "npx jest",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pwafire/pwafire/"
  },
  "author": "Maye Edwin (https://maye.pwafire.org)",
  "license": "MIT",
  "keywords": [
    "pwafire",
    "pwa install button",
    "pwa install",
    "web payments",
    "push notifications",
    "notifications",
    "payments",
    "pwa react",
    "pwa",
    "progressive web app",
    "progressive web apps",
    "workbox",
    "api",
    "connectivity",
    "offline handler",
    "offline handler",
    "new web capabilities",
    "fugu",
    "project-fugu"
  ],
  "devDependencies": {
    "esbuild": "^0.19.0",
    "rimraf": "^5.0.0",
    "@types/jest": "^26.0.24",
    "jest": "^29.7.0",
    "prettier": "^2.0.5",
    "ts-jest": "^29.2.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.5.4"
  }
}
